<div id="subheader" class="subheader-icon color-{{ section.settings.color_scheme }} section-{{ section.id }}">
  <h1>{{ section.settings.title }}</h1>
  <p class="text-body">{{ section.settings.description }}</p>
  {% if section.settings.image %}
    <img
      src="{{ section.settings.image | image_url }}"
      height="50px"
      width="50px"
      alt="background image">
  {% endif %}
</div>

{% style %}
  .section-{{ section.id }} {
    border: solid 2px red;
    height: fit-content;
  }
{% endstyle %}

{% schema %}
  {
    "name": "Custom Subheading Icon",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Default Title"
      }, {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Default Description"
      }, {
        "type": "image_picker",
        "id": "icon_image",
        "label": "Icon Image"
      }, {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-4"
      }
    ],
    "presets": [
      {
        "name": "Custom Subheading with Icon",
        "category": "Custom"
      }
    ]
  }
{% endschema %}