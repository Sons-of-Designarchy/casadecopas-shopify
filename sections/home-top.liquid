<link rel="stylesheet" href="{{ 'homepage.css' | asset_url }}">

<div id="hero" class="t-hero t-section t-text-center">
  <div class="t-container mx-auto t-hero-content">
    <h1 class="t-display t-text-orange">FOR THE ACT</h1>
    <img src="{{ 'hero-cover.jpg' | asset_url }}" />
    <h1 class="t-display t-text-orange">OF CREATION</h1>
  </div>
  <img src="{{ 'hero-bg.png' | asset_url }}" class="t-hero-bg" />
</div>

<div id="welcome" class="t-welcome t-section t-text-center">
  <div class="t-container mx-auto">
    <h2 class="t-h2">Casa de Copas is the first interdisciplinary & community-first recording space focused on the creation of
      holistic
      music and creative projects in Mexico City.</h2>
    <div class="t-text-center t-welcome-footer">
      <p>opening early 2024</p>
    </div>
  </div>
  <div class="t-welcome-floated">
    <img width="233px" src="{{ 'parsifal.jpg' | asset_url }}" class="t-parsifal" />
    <img width="123px" src="{{ 'deer.jpg' | asset_url }}" class="t-deer" />
    <img width="125px" src="{{ 'sun.jpg' | asset_url }}" class="t-sun" />
    <img width="125px" src="{{ 'human.jpg' | asset_url }}" class="t-human" />
  </div>
</div>

